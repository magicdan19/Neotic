#!/bin/bash

docker run -it --rm --privileged --net=host \
  --env=ROS_MASTER_URI=http://jetsonagx:11311/ \
  --env=ROS_HOSTNAME=jetsonnano \
  --volume=/dev/:/dev/ \
  --volume=/home/dan/temp:/tmp \
  --name nano \
  magicdan/aarch64-ros-noetic-opencr:latest \
  rosrun rosserial_python serial_node.py __name:="nano" _baud:=115200 _port:=/dev/ttyUSB0

