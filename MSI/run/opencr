#!/bin/bash

docker run -it --rm --privileged --net=host \
  --env=ROS_MASTER_URI=http://msi:11311/ \
  --env=ROS_HOSTNAME=msi \
  --volume=/dev/:/dev/ \
  --name opencr \
  magicdan/msi-ros-noetic-opencr:latest \
  /bin/bash

 
